{- 
  TASK 3 - Find and replace binary substring
  Binary string is represented as a cell linked list: string splitted to chunks,
  first chunk stored to the root cell, next one to the cell in ref and so on;
  each cell can have only one ref. 
  Write the method that find and replaces one flags in the binary string
  with another value. Flags and values can be can be of any length, but
  strictly up to 128 bits. The method must replace every flag it finds.
  Flag and the value to be replaced is guaranteed to be greater than 0.
  Lets give a simple example. We have the target flag 101110101 and the value
  to be written 111111111 as inputs, and a linked list of cells, in which the bit
  value of the first cell ends with ...10100001011, and in the ref we have cell that
  starts with 10101000111111...
  The output should be a linked list where the first
  cell ends with ...10100001111, and the second cell starts with 11111000111111...

-}

() recv_internal() {
}

forall X -> (tuple, X) tpop(tuple t) asm "TPOP";
int tlen(tuple t) asm "TLEN";

(tuple) make_tuple(int key) {
  tuple result = empty_tuple();
  
  while (key > 0) {
    result = tpush(result, key % 2);
    key /= 2;
  }

  return result;
}

(tuple, int) pop_front(tuple t) {
  tuple result = empty_tuple();

  int front = first(t);

  int len = tlen(t);
  int idx = 1;

  while (idx < len) {
    result = tpush(result, t.at(idx));
    idx += 1;
  }

  return (result, front);
}

(int) check_tuple_equality(tuple a, tuple b) {
  int lena = tlen(a);
  int lenb = tlen(b);

  if (lena != lenb) {
    return false;
  }

  repeat(lena) {
    (a, int A) = tpop(a);
    (b, int B) = tpop(b);

    if (A != B) {
      return false;
    }
  }

  return true;
}

(cell) _find_and_replace(tuple flag, tuple value, tuple window, int timer, slice data) {
  builder result = begin_cell();
  int done = 0;


  while (~ slice_empty?(data)) {
    if (done == 1000) {
      cell _result = _find_and_replace(flag, value, window, timer, data);

      result = store_ref(result, _result);

      return result.end_cell();
    }

    ;; pop front element from window
    if (tlen(window) >= tlen(flag)) {
      (window, int front) = pop_front(window);

      result = store_uint(result, front, 1);
      done += 1;

      if (timer > 0) {
        timer -= 1;
      }
    }

    if (tlen(window) < tlen(flag)) {
      
      if (slice_data_empty?(data)) {
        (data, cell next_chunk) = load_ref(data);

        data = begin_parse(next_chunk);
      }

      (data, int bit) = load_uint(data, 1);

      window = tpush(window, bit);

      if (timer == 0) {
        if (check_tuple_equality(window, flag)) {
          window = value;
          timer = tlen(value);
        }
      }
    }
  }

  while (tlen(window) > 0) {
    if (done == 1000) {
      cell _result = _find_and_replace(flag, value, window, timer, data);

      result = store_ref(result, _result);

      return result.end_cell();
    }
    
    (window, int front) = pop_front(window);
    
    result = store_uint(result, front, 1);
    done += 1;
  }

  return end_cell(result);
}

;; testable
(cell) find_and_replace(int flag, int value, cell linked_list) method_id {
  return _find_and_replace(make_tuple(flag), make_tuple(value), empty_tuple(), 0, begin_parse(linked_list));
}